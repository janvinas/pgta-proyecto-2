<UserControl x:Class="AsterixViewer.Tabs.TableTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AsterixViewer.Tabs"
             xmlns:main="clr-namespace:AsterixViewer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <main:AddressConverter x:Key="AddressConverter"/>
        <main:TimeConverter x:Key="TimeConverter"/>
        <main:Mode3AConverter x:Key="Mode3AConverter"/>
        <main:FLConverter x:Key="FLConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="1">
            <MenuItem Header="Filtros">
                <MenuItem x:Name="Cat021Filter" Header="CAT021" IsCheckable="True" IsChecked="True" Click="OnFilterChanged"/>
                <MenuItem x:Name="Cat048Filter" Header="CAT048" IsCheckable="True" IsChecked="True" Click="OnFilterChanged"/>
                <MenuItem x:Name="BlancoPuroFilter" Header="Blanco Puro" IsCheckable="True" IsChecked="False" Click="OnFilterChanged"/>
                <MenuItem x:Name="TransponderFijoFilter" Header="Transponder Fijo" IsCheckable="True" IsChecked="True" Click="OnFilterChanged"/>
                <MenuItem x:Name="EliminarSuelo" Header="Eliminar 'On Ground'" IsCheckable="True" IsChecked="False" Click="OnFilterChanged"/>
            </MenuItem>
            <MenuItem Header="Exportar" Click="Exportar_Click"/>
            <MenuItem Header="Exportar (Formato P3)" Click="ExportarP3_Click"/>
        </Menu>

        <Border Grid.Row="0" Background="#f0f0f0" Padding="6" BorderBrush="#ccc" BorderThickness="0,0,0,1">
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Lat. min:" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox x:Name="LatMinBox" Width="80" Margin="5,0" Text="40,9"/>
                <TextBlock Text="Lat. max:" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox x:Name="LatMaxBox" Width="80" Margin="5,0" Text="41,7"/>
                <TextBlock Text="Lon. min:" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox x:Name="LonMinBox" Width="80" Margin="5,0" Text="1,5"/>
                <TextBlock Text="Lon. max:" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox x:Name="LonMaxBox" Width="80" Margin="5,0" Text="2,6"/>
                <Button Content="Aplicar" Click="OnFilterChanged" Margin="10,0"/>
                <Button Content="Limpiar" Click="OnClearCoordFilter" Margin="5,0"/>
            </StackPanel>
        </Border>




        <DataGrid x:Name="DataGrid" Grid.Row="2" IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CAT" Binding="{Binding Cat, StringFormat={}{0}, TargetNullValue='Unknown'}"/>
                <DataGridTextColumn Header="SIC" Binding="{Binding SIC}"/>
                <DataGridTextColumn Header="SAC" Binding="{Binding SAC}"/>
                <DataGridTextColumn Header="Time" Binding="{Binding TimeOfDay, Converter={StaticResource TimeConverter}}"/>
                <DataGridTemplateColumn Header="TRD">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="InfoButton" Content="ℹ️" Click="OnTRDClick"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Mode 3/A" Binding="{Binding Mode3A, Converter={StaticResource Mode3AConverter}}"/>
                <DataGridTextColumn Header="Config Mode 3/A" Binding="{Binding configMode3A}"/>
                <DataGridTextColumn Header="FL" Binding="{Binding FlightLevel, Converter={StaticResource FLConverter}}"/>
                <DataGridTextColumn Header="QNH Correction" Binding="{Binding QNHcorrection, StringFormat={}{0:F2}}"/>
                <DataGridTextColumn Header="Distance" Binding="{Binding Distance, StringFormat={}{0:F2}°, TargetNullValue=''}"/>
                <DataGridTextColumn Header="Azimuth" Binding="{Binding Azimuth, StringFormat={}{0:F2}°, TargetNullValue=''}"/>
                <DataGridTextColumn Header="Longitude" Binding="{Binding Longitude, StringFormat={}{0:F3}°, TargetNullValue=''}"/>
                <DataGridTextColumn Header="Latitude" Binding="{Binding Latitude, StringFormat={}{0:F3}°, TargetNullValue=''}"/>

                <DataGridTextColumn Header="SRL" Binding="{Binding RadarPlotCharacteristics.SRL, StringFormat={}{0:F2}°, TargetNullValue=''}"/>
                <DataGridTextColumn Header="SSR" Binding="{Binding RadarPlotCharacteristics.SSR}"/>
                <DataGridTextColumn Header="SAM" Binding="{Binding RadarPlotCharacteristics.SAM, StringFormat={}{0} dBm, TargetNullValue=''}"/>
                <DataGridTextColumn Header="PRL" Binding="{Binding RadarPlotCharacteristics.PRL, StringFormat={}{0:F2}°, TargetNullValue=''}"/>
                <DataGridTextColumn Header="PAM" Binding="{Binding RadarPlotCharacteristics.PAM, StringFormat={}{0} dBm, TargetNullValue=''}"/>
                <DataGridTextColumn Header="RPD" Binding="{Binding RadarPlotCharacteristics.RPD, StringFormat={}{0} NM, TargetNullValue=''}"/>
                <DataGridTextColumn Header="APD" Binding="{Binding RadarPlotCharacteristics.APD, StringFormat={}{0:F2}°, TargetNullValue=''}"/>
                <DataGridTextColumn Header="SCO" Binding="{Binding RadarPlotCharacteristics.SCO}"/>
                <DataGridTextColumn Header="SCR" Binding="{Binding RadarPlotCharacteristics.SCR}"/>
                <DataGridTextColumn Header="RW" Binding="{Binding RadarPlotCharacteristics.RW, StringFormat={}{0} NM, TargetNullValue=''}"/>
                <DataGridTextColumn Header="AR" Binding="{Binding RadarPlotCharacteristics.AR, StringFormat={}{0} NM, TargetNullValue=''}"/>

                <DataGridTextColumn Header="Address" Binding="{Binding Address, Converter={StaticResource AddressConverter}}"/>
                <DataGridTextColumn Header="Callsign" Binding="{Binding Identification}"/>
                <DataGridTextColumn Header="Track N." Binding="{Binding TrackNum}"/>
                <DataGridTextColumn Header="Gr. Speed" Binding="{Binding GS, StringFormat={}{0:F2} kt, TargetNullValue=''}"/>
                <DataGridTextColumn Header="Heading" Binding="{Binding Heading, StringFormat={}{0:F2}°, TargetNullValue=''}"/>

                <DataGridTextColumn Header="BDS" Binding="{Binding BDS.BDSsTabla}"/>
                <DataGridTextColumn Header="statusMCP" Binding="{Binding BDS.statusMCP}"/>
                <DataGridTextColumn Header="MCP" Binding="{Binding BDS.MCP}"/>
                <DataGridTextColumn Header="statusFMS" Binding="{Binding BDS.statusFMS}"/>
                <DataGridTextColumn Header="FMS" Binding="{Binding BDS.FMS}"/>
                <DataGridTextColumn Header="statusBARO" Binding="{Binding BDS.statusBARO}"/>
                <DataGridTextColumn Header="BARO" Binding="{Binding BDS.BARO}"/>
                <DataGridTextColumn Header="infoMCP" Binding="{Binding BDS.infoMCP}"/>
                <DataGridTextColumn Header="VNAV" Binding="{Binding BDS.VNAV}"/>
                <DataGridTextColumn Header="ALTflag" Binding="{Binding BDS.ALTflag}"/>
                <DataGridTextColumn Header="APPR" Binding="{Binding BDS.APPR}"/>
                <DataGridTextColumn Header="statusTarget" Binding="{Binding BDS.statusTarget}"/>
                <DataGridTextColumn Header="TargetALT" Binding="{Binding BDS.TargetALT}"/>

                <DataGridTextColumn Header="statusROLL" Binding="{Binding BDS.statusROLL}"/>
                <DataGridTextColumn Header="ROLL" Binding="{Binding BDS.ROLL}"/>
                <DataGridTextColumn Header="statusTTA" Binding="{Binding BDS.statusTTA}"/>
                <DataGridTextColumn Header="TTA" Binding="{Binding BDS.TTA}"/>
                <DataGridTextColumn Header="statusGS" Binding="{Binding BDS.statusGS}"/>
                <DataGridTextColumn Header="GS" Binding="{Binding BDS.GS}"/>
                <DataGridTextColumn Header="statusTAR" Binding="{Binding BDS.statusTAR}"/>
                <DataGridTextColumn Header="TAR" Binding="{Binding BDS.TAR}"/>
                <DataGridTextColumn Header="statusTAS" Binding="{Binding BDS.statusTAS}"/>
                <DataGridTextColumn Header="TAS" Binding="{Binding BDS.TAS}"/>

                <DataGridTextColumn Header="statusMH" Binding="{Binding BDS.statusMH}"/>
                <DataGridTextColumn Header="MH" Binding="{Binding BDS.MH}"/>
                <DataGridTextColumn Header="statusIAS" Binding="{Binding BDS.statusIAS}"/>
                <DataGridTextColumn Header="IAS" Binding="{Binding BDS.IAS}"/>
                <DataGridTextColumn Header="statusMACH" Binding="{Binding BDS.statusMACH}"/>
                <DataGridTextColumn Header="MACH" Binding="{Binding BDS.MACH}"/>
                <DataGridTextColumn Header="statusBAROV" Binding="{Binding BDS.statusBAROV}"/>
                <DataGridTextColumn Header="BAROV" Binding="{Binding BDS.BAROV}"/>
                <DataGridTextColumn Header="statusIVV" Binding="{Binding BDS.statusIVV}"/>
                <DataGridTextColumn Header="IVV" Binding="{Binding BDS.IVV}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
