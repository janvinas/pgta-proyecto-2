<UserControl x:Class="AsterixViewer.Tabs.TableTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AsterixViewer.Tabs"
             xmlns:main="clr-namespace:AsterixViewer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <main:AddressConverter x:Key="AddressConverter"/>
        <main:TimeConverter x:Key="TimeConverter"/>
        <main:Mode3AConverter x:Key="Mode3AConverter"/>
        <main:FLConverter x:Key="FLConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Filtros">
                <MenuItem x:Name="Cat021Filter" Header="CAT021" IsCheckable="True" IsChecked="True" Click="OnFilterChanged"/>
                <MenuItem x:Name="Cat048Filter" Header="CAT048" IsCheckable="True" IsChecked="True" Click="OnFilterChanged"/>
                <MenuItem x:Name="BlancoPuroFilter" Header="Blanco Puro" IsCheckable="True" IsChecked="False" Click="OnFilterChanged"/>
                <MenuItem x:Name="TransponderFijoFilter" Header="Transponder Fijo" IsCheckable="True" IsChecked="True" Click="OnFilterChanged"/>
            </MenuItem>
            <MenuItem Header="Exportar"></MenuItem>
        </Menu>

        <DataGrid x:Name="DataGrid" Grid.Row="1" IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CAT" Binding="{Binding Cat, StringFormat={}{0}, TargetNullValue='Unknown'}"/>
                <DataGridTextColumn Header="SIC" Binding="{Binding SIC}"/>
                <DataGridTextColumn Header="SAC" Binding="{Binding SAC}"/>
                <DataGridTextColumn Header="Time" Binding="{Binding TimeOfDay, Converter={StaticResource TimeConverter}}"/>
                <DataGridTemplateColumn Header="TRD">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="InfoButton" Content="ℹ️" Click="OnTRDClick"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Mode 3/A" Binding="{Binding Mode3A, Converter={StaticResource Mode3AConverter}}"/>
                <DataGridTextColumn Header="FL" Binding="{Binding FlightLevel, Converter={StaticResource FLConverter}}"/>
                <DataGridTextColumn Header="Slant Angle" Binding="{Binding SlantAngle, StringFormat={}{0:F2}°, TargetNullValue=''}"/>
                <DataGridTextColumn Header="Azimuth" Binding="{Binding Azimuth, StringFormat={}{0:F2}°, TargetNullValue=''}"/>
                <DataGridTextColumn Header="Longitude" Binding="{Binding Longitude, StringFormat={}{0:F3}°, TargetNullValue=''}"/>
                <DataGridTextColumn Header="Latitude" Binding="{Binding Latitude, StringFormat={}{0:F3}°, TargetNullValue=''}"/>

                <DataGridTextColumn Header="SRL" Binding="{Binding RadarPlotCharacteristics.SRL, StringFormat={}{0:F2}°, TargetNullValue=''}"/>
                <DataGridTextColumn Header="SSR" Binding="{Binding RadarPlotCharacteristics.SSR}"/>
                <DataGridTextColumn Header="SAM" Binding="{Binding RadarPlotCharacteristics.SAM, StringFormat={}{0} dBm, TargetNullValue=''}"/>
                <DataGridTextColumn Header="PRL" Binding="{Binding RadarPlotCharacteristics.PRL, StringFormat={}{0:F2}°, TargetNullValue=''}"/>
                <DataGridTextColumn Header="PAM" Binding="{Binding RadarPlotCharacteristics.PAM, StringFormat={}{0} dBm, TargetNullValue=''}"/>
                <DataGridTextColumn Header="RPD" Binding="{Binding RadarPlotCharacteristics.RPD, StringFormat={}{0} NM, TargetNullValue=''}"/>
                <DataGridTextColumn Header="APD" Binding="{Binding RadarPlotCharacteristics.APD, StringFormat={}{0:F2}°, TargetNullValue=''}"/>
                <DataGridTextColumn Header="SCO" Binding="{Binding RadarPlotCharacteristics.SCO}"/>
                <DataGridTextColumn Header="SCR" Binding="{Binding RadarPlotCharacteristics.SCR}"/>
                <DataGridTextColumn Header="RW" Binding="{Binding RadarPlotCharacteristics.RW, StringFormat={}{0} NM, TargetNullValue=''}"/>
                <DataGridTextColumn Header="AR" Binding="{Binding RadarPlotCharacteristics.AR, StringFormat={}{0} NM, TargetNullValue=''}"/>

                <DataGridTextColumn Header="Address" Binding="{Binding Address, Converter={StaticResource AddressConverter}}"/>
                <DataGridTextColumn Header="Callsign" Binding="{Binding Identification}"/>
                <DataGridTextColumn Header="Track N." Binding="{Binding TrackNum}"/>
                <DataGridTextColumn Header="Gr. Speed" Binding="{Binding GS, StringFormat={}{0:F2} kt, TargetNullValue=''}"/>
                <DataGridTextColumn Header="Heading" Binding="{Binding Heading, StringFormat={}{0:F2}°, TargetNullValue=''}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
