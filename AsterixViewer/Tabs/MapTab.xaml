<UserControl x:Class="AsterixViewer.Tabs.MapTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:AsterixViewer.Converters"
             xmlns:map="clr-namespace:AsterixViewer.AsterixMap"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             d:DataContext="{d:DesignInstance Type=map:MapViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <esri:MapView Grid.Row="0"
                      x:Name="MainMapView"
                      Map="{Binding Map}"
                      GraphicsOverlays="{Binding GraphicsOverlays}"/>

        <Border Background="#AA000000"
                CornerRadius="5"
                Padding="6"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="20">
            <TextBlock Foreground="White"
                       FontWeight="Bold"
                       FontSize="14"
                       Text="{Binding ReplayTimeText}" />
        </Border>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="5">
            <Button Command="{Binding ChangeTimeCommand}" CommandParameter="-60" Content="-60s" Margin="2"/>
            <Button Command="{Binding ChangeTimeCommand}" CommandParameter="-15" Content="-15s" Margin="2"/>
            <Button Command="{Binding ChangeTimeCommand}" CommandParameter="-5"  Content="-5s"  Margin="2"/>
            <Button Command="{Binding ChangeTimeCommand}" CommandParameter="-1"  Content="-1s"  Margin="2"/>
            <Button Command="{Binding PlayPauseCommand}" Content="{Binding PlayPauseButtonText}" Margin="2"/>
            <Button Command="{Binding ChangeSpeedCommand}" Content="{Binding ReplaySpeedText}" Margin="2"/>
            <Button Command="{Binding ChangeTimeCommand}" CommandParameter="1"  Content="+1s"  Margin="2"/>
            <Button Command="{Binding ChangeTimeCommand}" CommandParameter="5"  Content="+5s"  Margin="2"/>
            <Button Command="{Binding ChangeTimeCommand}" CommandParameter="15" Content="+15s" Margin="2"/>
            <Button Command="{Binding ChangeTimeCommand}" CommandParameter="60" Content="+60s" Margin="2"/>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <TextBlock Text="{Binding MinReplayTime, StringFormat='{}{0:F0}s'}"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Width="70"
                       TextAlignment="Right"/>

            <Slider Minimum="{Binding MinReplayTime}"
                    Maximum="{Binding MaxReplayTime}"
                    Value="{Binding ReplayTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    Width="600"
                    Margin="10,0"/>


            <TextBlock Text="{Binding MaxReplayTime, StringFormat='{}{0:F0}s'}"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Width="70"
                       TextAlignment="Left"/>
        </StackPanel>

        <!-- 📋 Panel de información -->
        <Border x:Name="InfoPanel"
        Grid.Row="0"
        Background="#CCFFFFFF"
        BorderBrush="#888"
        BorderThickness="1"
        Padding="12"
        CornerRadius="8"
        Width="260"
        Margin="20"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Visibility="{Binding IsInfoPanelVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="✈️ Detalles del vuelo"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0 0 0 10"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="220">
                    <TextBlock Text="{Binding SelectedGraphicInfo}" 
                       TextWrapping="Wrap"
                       FontSize="14"
                       Margin="10,0,10,10" />
                </ScrollViewer>

                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
                    <Button Content="Más info"
                    Command="{Binding ShowMoreInfoCommand}"
                    Margin="0 0 10 0"
                    Width="80"/>
                    <Button Content="Cerrar"
                    Command="{Binding HideDetailsCommand}"
                    Width="80"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 🆕 Panel de “Más información” -->
        <Border x:Name="MoreInfoPanel"
        Grid.Row="0"
        Background="#CCFFFFFF"
        BorderBrush="#888"
        BorderThickness="1"
        Padding="12"
        CornerRadius="8"
        Width="300"
        Margin="300,20,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Visibility="{Binding IsMoreInfoVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="📊 Información adicional"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0 0 0 10"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="220">
                    <TextBlock Text="{Binding ExtendedGraphicInfo}" 
                               TextWrapping="Wrap"
                               FontSize="14"
                               Margin="10,0,10,10" />
                </ScrollViewer>

                <Button Content="Volver"
                Command="{Binding HideMoreInfoCommand}"
                HorizontalAlignment="Right"
                Width="80"
                Margin="0 10 0 0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
