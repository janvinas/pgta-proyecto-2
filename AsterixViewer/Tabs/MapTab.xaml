<UserControl x:Class="AsterixViewer.Tabs.MapTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:AsterixViewer.Converters"
             xmlns:map="clr-namespace:AsterixViewer.AsterixMap"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             xmlns:main="clr-namespace:AsterixViewer"
             d:DataContext="{d:DesignInstance Type=map:MapViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <esri:MapView Grid.Row="0"
                        x:Name="MainMapView"
                        Map="{Binding Map}"
                        GraphicsOverlays="{Binding GraphicsOverlays}"/>

            <Border Background="#AA000000"
                CornerRadius="5"
                Padding="6"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="20">
                <TextBlock Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Text="{Binding DataStore.ReplayTimeText}" />
            </Border>

            <Border Background="#AA000000"
                CornerRadius="5"
                Padding="6"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="14"
                        Width="14"
                        Margin="0,0,4,0">
                        <Image.Source>
                            <BitmapImage UriSource="/Resources/avion.png"></BitmapImage>
                        </Image.Source>
                    </Image>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Text="CAT21"/>

                    <Canvas
                        Grid.Row="1"
                        Grid.Column="0"
                        Height="14"
                        Width="14"
                        Margin="0,0,4,0">
                        <Ellipse
                            Width="8"
                            Height="8"
                            Fill="BlueViolet"
                            Canvas.Left="3"
                            Canvas.Top="4" />
                    </Canvas>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Text="CAT48"/>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="5"
                    DataContext="{Binding DataStore}">
                <Button Command="{Binding ChangeTimeCommand}" CommandParameter="-60" Content="-60s" Margin="2"/>
                <Button Command="{Binding ChangeTimeCommand}" CommandParameter="-15" Content="-15s" Margin="2"/>
                <Button Command="{Binding ChangeTimeCommand}" CommandParameter="-5"  Content="-5s"  Margin="2"/>
                <Button Command="{Binding ChangeTimeCommand}" CommandParameter="-1"  Content="-1s"  Margin="2"/>
                <Button Command="{Binding PlayPauseCommand}" Content="{Binding PlayPauseButtonText}" Margin="2"/>
                <Button Command="{Binding ChangeSpeedCommand}" Content="{Binding ReplaySpeedText}" Margin="2"/>
                <Button Command="{Binding ChangeTimeCommand}" CommandParameter="1"  Content="+1s"  Margin="2"/>
                <Button Command="{Binding ChangeTimeCommand}" CommandParameter="5"  Content="+5s"  Margin="2"/>
                <Button Command="{Binding ChangeTimeCommand}" CommandParameter="15" Content="+15s" Margin="2"/>
                <Button Command="{Binding ChangeTimeCommand}" CommandParameter="60" Content="+60s" Margin="2"/>
            </StackPanel>

            <Grid Grid.Row="2"
                    Margin="10">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding TimeSliderViewModel.MinReplayTimeSpan, StringFormat='{}{0:hh\\:mm\\:ss}'}"
                        Foreground="White"
                        VerticalAlignment="Center"
                        TextAlignment="Right"/>

                <Slider Grid.Column="1" DataContext="{Binding TimeSliderViewModel}"
                    Minimum="{Binding MinReplayTime}"
                    Maximum="{Binding MaxReplayTime}"
                    Value="{Binding ReplayTime, Mode=TwoWay}"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    Margin="10,0"/>


                <TextBlock Grid.Column="2" Text="{Binding TimeSliderViewModel.MaxReplayTimeSpan, StringFormat='{}{0:hh\\:mm\\:ss}'}"
                        Foreground="White"
                        VerticalAlignment="Center"
                        TextAlignment="Left"/>
            </Grid>

            <!-- 📋 Panel de información -->
            <Border x:Name="InfoPanel"
        Grid.Row="0"
        Background="#CCFFFFFF"
        BorderBrush="#888"
        BorderThickness="1"
        Padding="12"
        CornerRadius="8"
        Width="260"
        Margin="20"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Visibility="{Binding IsInfoPanelVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="✈️ Detalles del vuelo"
                    FontWeight="Bold"
                    FontSize="16"
                    Margin="0 0 0 10"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="220">
                        <TextBlock Text="{Binding SelectedGraphicInfo}" 
                        TextWrapping="Wrap"
                        FontSize="14"
                        Margin="10,0,10,10"/>
                    </ScrollViewer>

                    <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
                        <Button Content="Más info"
                    Command="{Binding ShowMoreInfoCommand}"
                    Visibility="{Binding BotonVisibilidad}" 
                    Margin="0 0 10 0"
                    Background="Gray"
                    Foreground="Black"
                    Width="80"/>
                        <Button Content="Cerrar"
                    Command="{Binding HideDetailsCommand}"
                    Background="Gray"
                    Foreground="Black"                    
                    Width="80"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 🆕 Panel de “Más información” -->
            <Border x:Name="MoreInfoPanel"
        Grid.Row="0"
        Background="#CCFFFFFF"
        BorderBrush="#888"
        BorderThickness="1"
        Padding="12"
        CornerRadius="8"
        Width="300"
        Margin="300,20,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Visibility="{Binding IsMoreInfoVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="📊 Información adicional"
                    FontWeight="Bold"
                    FontSize="16"
                    Margin="0 0 0 10"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="220">
                        <TextBlock Text="{Binding ExtendedGraphicInfo}" 
                                TextWrapping="Wrap"
                                FontSize="14"
                                Margin="10,0,10,10" />
                    </ScrollViewer>

                    <Button Content="Volver"
                Command="{Binding HideMoreInfoCommand}"
                HorizontalAlignment="Right"
                Background="Gray"
                Foreground="Black"
                Width="80"
                Margin="0 10 0 0"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <Border Grid.Column="1">
            <main:Filters></main:Filters>
        </Border>
    </Grid>
</UserControl>
