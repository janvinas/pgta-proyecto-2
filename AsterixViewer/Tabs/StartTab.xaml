<UserControl x:Class="AsterixViewer.Tabs.StartTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AsterixViewer.Tabs"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Content="Load File" Click="OpenFile_click"></Button>
            <Button Content="Proyecto3" Click="Button_Click"></Button>
            <Button Content="Button3"></Button>
            <ProgressBar x:Name="ProgressBar" Height="10" Minimum="0" Maximum="1"/>
        </StackPanel>
        <Image Grid.Column="1" Source="/Resources/Welcome_image.jpg" Stretch="Fill"/>
    </Grid>
</UserControl>
