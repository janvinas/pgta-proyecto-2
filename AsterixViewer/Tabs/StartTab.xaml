<UserControl x:Class="AsterixViewer.Tabs.StartTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AsterixViewer.Tabs"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Content="Load File"></Button>
            <Button Content="Button3"></Button>
            <ProgressBar x:Name="ProgressBar" Height="10" Minimum="0" Maximum="1"/>
        </StackPanel>
        <Grid Grid.Column="1">
            <Image Source="/Resources/Welcome_image.jpg" Stretch="UniformToFill"/>

            <TextBlock Text="ASTERIXParser"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Top" 
                   Margin="10" 
                   Foreground="White"
                   FontSize="64"/>

            <TextBlock Text="PGTA Group 5"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Bottom" 
                   Margin="10" 
                   Foreground="White"
                   FontSize="24"/>
        </Grid>
    </Grid>
</UserControl>
